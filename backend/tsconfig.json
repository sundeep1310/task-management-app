{
    "compilerOptions": {
      "target": "es2020",
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "typeRoots": [
        "./node_modules/@types"
      ],
      "allowJs": true,
      "checkJs": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }